<?xml version='1.0' encoding='utf-8'?>
<widget id="com.toolness.ice_cream_compass" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Ice Cream Compass</name>
    <description>
        A simple app that directs the user to an experimental ice cream shop in NYC.
    </description>
    <author email="varmaa@gmail.com" href="http://toolness.com">
        Atul Varma
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-device-orientation" spec="1.0.1" />
    <plugin name="cordova-plugin-geolocation" spec="1.0.1" />
    <access origin="*" />
    <preference name="Orientation" value="portrait" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
